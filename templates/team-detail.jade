block script
  script.
    $(function(){
      scheduleSwiperInit();
      relativeNewsInit();
      relativeVideoInit();
      function scheduleSwiperInit(){
        try{
          var a = webpackModule.swiper('.team-detail-schedule-container .swiper-container', {
            prevButton: '.team-detail-schedule-container .schedule-swiper-ctrl .prev-ctrl',
            nextButton: '.team-detail-schedule-container .schedule-swiper-ctrl .next-ctrl',
            onInit: function(b){
              setTimeout(function(){
                a.go(13, false)
              }, 1000)
            }
          })
          console.log(a)
        }catch(e){
          console.error('scheduleSwiperInit appear error')
        }
      }

      function relativeNewsInit(){
        webpackModule.swiper('.team-relative-news .news-container', {
          loop: true,
          prevButton: '.team-relative-news .relative-news-swiper-ctrl .prev-ctrl',
          nextButton: '.team-relative-news .relative-news-swiper-ctrl .next-ctrl'
        })
      }
      function relativeVideoInit(){
        webpackModule.swiper('.team-relative-video .video-container .swiper-container', {
          loop: true,
          prevButton: '.team-relative-video .relative-video-swiper-ctrl .prev-ctrl',
          nextButton: '.team-relative-video .relative-video-swiper-ctrl .next-ctrl'
        })
      }
    })
